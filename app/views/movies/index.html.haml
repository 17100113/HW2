-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to "Movie Title", { :sort_by => "title" }, :class => @cssClass
      %th  Rating 
      %th=  link_to "Release",  { :sort_by => "release_date" }, :class => @cssClass
      %th  More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
|
= link_to 'Edit a movie', updateMovie_movies_path
|
= link_to 'Delete by Title', deleteByTitle_movies_path
|
= link_to 'Delete by Rating', deleteByRating_movies_path
